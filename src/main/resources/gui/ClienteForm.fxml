<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10.0" padding="15" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="senac.senacfx.controller.ClienteFormController">
    <children>
        <Label text="Código" />
        <TextField fx:id="txtCodigo" />

        <Label text="Nome" />
        <TextField fx:id="txtNome" />
        <Label fx:id="labelErrorNome" textFill="red" />

        <Label text="Endereço" />
        <TextField fx:id="txtEndereco" />
        <Label fx:id="labelErrorEndereco" textFill="red" />

        <Label text="Telefone" />
        <TextField fx:id="txtTelefone" />
        <Label fx:id="labelErrorTelefone" textFill="red" />

        <Label text="Email" />
        <TextField fx:id="txtEmail" />
        <Label fx:id="labelErrorEmail" textFill="red" />

        <HBox spacing="10">
            <children>
                <Button fx:id="btSave" text="Salvar" onAction="#onBtSaveAction" />
                <Button fx:id="btCancel" text="Cancelar" onAction="#onBtCancelAction" />
            </children>
        </HBox>
    </children>
</VBox>
